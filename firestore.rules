rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - more permissive for development
    match /users/{userId} {
      // Users can read all user documents (for chat user lists)
      allow read: if request.auth != null;
      
      // Users can write their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chats collection - handle missing participants field
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid in (resource.data.participants || []) ||
         request.auth.uid in (request.resource.data.participants || []));
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Calls collection - more permissive
    match /calls/{callId} {
      allow read, write: if request.auth != null;
      
      // Signaling subcollections
      match /offers/{offerId} {
        allow read, write: if request.auth != null;
      }
      
      match /answers/{answerId} {
        allow read, write: if request.auth != null;
      }
      
      match /iceCandidates/{candidateId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Stories collection - users can manage their stories
    match /stories/{storyId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Test collection for debugging
    match /test/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Contacts collection
    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny rule for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}